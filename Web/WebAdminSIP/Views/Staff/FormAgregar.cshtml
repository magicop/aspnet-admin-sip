@model WebAdminSIP.Models.DTO.Medico


<div class="container">

    <center><h1>Formulario Agregar Médico</h1></center>
    <br>

    @using (Html.BeginForm("Agregar", "Staff", FormMethod.Post, new { id = "FormAgregarMedico", name = "FormAgregarMedico" }))
    {
        <div class="form-row">

            <div class="form-group col-md-6">
                <label>Rut</label>
                @Html.TextBoxFor(model => model.rut, new { @class = "form-control", placeholder = "Ingrese el rut del médico" })
            </div>

            <div class="form-group col-md-6">
                <label>Nombre</label>
                @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", placeholder = "Ingrese el nombre del médico" })
            </div>

        </div>

        <center>
            <br>

            <button type="submit" class="btn btn-outline-danger btn-lg" id="btnAgregarMedico" name="btnAgregarMedico">Agregar</button>

            <button type="reset" class="btn btn-outline-danger btn-lg" onclick="limpiarFormulario()" value="Limpiar">Limpiar</button>

        </center>
    }


</div>