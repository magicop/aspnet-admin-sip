@model WebAdminSIP.Models.DTO.Restriccion


<div class="container">

    <center><h1>Buscar Restricción</h1></center>
    <br>

    @using (Html.BeginForm("Buscar", "Restriccion", FormMethod.Post, new { id = "FormBuscarRestriccion"}))
    {
        <div class="form-row">

            <div class="form-group col-md-6">
                <label>Código del plan</label>
                @Html.TextBoxFor(model => model.codplan, new { @class = "form-control", placeholder = "Ingrese el código del plan" })
            </div>

            <div class="form-group col-md-6">
                <label>Isapre</label>
                @Html.DropDownListFor(model => model.isapre,
                   new SelectList(Model.LstIsapres, "Value", "Text"), "Selecciona la isapre",
                   new { @class = "form-control" })
            </div>
            
        </div>

        <center>
            <br>

            <button type="submit" class="btn btn-outline-danger btn-lg" id="btnBuscarRestriccion" name="btnBuscarRestriccion">Buscar</button>

            <button type="reset" class="btn btn-outline-danger btn-lg" onclick="limpiarFormulario()" value="Limpiar">Limpiar</button>

        </center>
    }


</div>